<div class="contain">
<h1>Alternative Pledge Methods</h1>
<div class="row">
  <div class="col-md-4">
    <p>Pledging</p>
    <ul>
      <li>We accept Square, Paypal and Bitcoin</li>
      <li>We respond withing 24 hours</li>
      <li>Feel free to ask any questions here as well</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @pledge do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: "Enter your name" %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, class: 'form-control', placeholder: "Enter your email" %>
      </div>
      <div class="form-group">
        <%= f.label :amount %>
        <%= f.text_field :amount, class: 'form-control', placeholder: "Enter the amount you wish to pledge" %>
      </div>
      <div class="form-group">
        <%= f.label :notes %>
        <%= f.text_area :notes, rows: 8, class: 'form-control', placeholder: "Notes" %>
      </div>
      <div class="form-group">
        <%= f.collection_radio_buttons :payment_type, Pledge.payment_types, :first, :first %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
