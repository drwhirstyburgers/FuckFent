<div class="contain">
<h1>Alternative Pledge Methods</h1>
<div class="row">
  <div class="col-md-4">
    <p>Pledging</p>
    <ul>
      <li>We accept Square, Paypal and Bitcoin</li>
      <li>We respond within 24 hours</li>
      <li>Feel free to ask any questions here as well</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @pledge do |f| %>
         <% if @pledge.errors.any? %>
           <div class="alert alert-danger">
             <h4><%= pluralize(@pledge.errors.count, "error") %>.</h4>
             <ul>
               <% @pledge.errors.full_messages.each do |msg| %>
                 <li><%= msg %></li>
               <% end %>
             </ul>
           </div>
         <% end %>
         <%= form_group_tag(@pledge.errors[:name]) do %>
           <%= f.label :name %>
           <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: "Enter name" %>
         <% end %>
         <%= form_group_tag(@pledge.errors[:email]) do %>
           <%= f.label :email %>
           <%= f.email_field :email, class: 'form-control', placeholder: "Enter email" %>
         <% end %>
         <%= form_group_tag(@pledge.errors[:amount]) do %>
           <%= f.label :amount %>
           <%= f.text_field :amount, class: 'form-control', placeholder: "Enter the amount you intend on pledging" %>
         <% end %>
         <div class="form-group">
           <%= f.label :notes %>
           <%= f.text_area :notes, rows: 8, class: 'form-control', placeholder: "Notes" %>
         </div>
         <%= form_group_tag(@pledge.errors[:payment_type]) do %>
           <%= f.collection_radio_buttons :payment_type, Pledge.payment_types, :first, :first %>
         <% end %>
         <div class="form-group">
           <%= f.submit "Pledge", class: 'btn btn-success' %>
         </div>
       <% end %>
  </div>
</div>
