<div class="row">
  <div class="contain">
    <h2>
      Name: <%= @pledge.name %> || Amount Requested: $<%= @pledge.amount %> </br>
    </h2>
    <small>
      submitted <%= time_ago_in_words(@pledge.created_at) %> ago
    </small>
    <div>
      <h4>
        Email: <%= @pledge.email %> || Payment Type: <%= @pledge.payment_type %>
      </h4>
    </div>
    <div>
      <h3>Notes:</h3>
      <%= @pledge.notes %>
    </div>
    <div class="pull-right">
      <%= link_to "Transaction Complete", @pledge, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this pledge request?'} %>
    </div>
    </br>
    </br>
  </div>
</div>
